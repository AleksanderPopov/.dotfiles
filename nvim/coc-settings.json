{
  "suggest.triggerCompletionWait": 300,
  "suggest.autoTrigger": "trigger",
  "suggest.maxCompleteItemCount": 30,

  "diagnostic.enableSign": false,
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ---> ",
  "diagnostic.checkCurrentLine": true,
  "git.addedSign.text": "++",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.text": "~~",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.text": "--",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.text": "==",
  "git.changeRemovedSign.hlGroup": "GitGutterChange",
  "git.addGBlameToVirtualText": true,
  "git.virtualTextPrefix": " ---> ",

  "explorer.icon.enableNerdfont": true,
  "explorer.quitOnOpen": true,
  "explorer.previewAction.onHover": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.position": "floating",
  "explorer.floating.width": -40,

  "diagnostic.filetypeMap": {
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck"
  },
  "eslint.filetypes": [
    "typescript"
  ],
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

  "cSpell.showStatus": true,
  "cSpell.allowCompoundWords": true,
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode"
  ],
  "cSpellExt.enableDictionaries": [
    "russian",
    "node",
    "aws",
    "bash",
    "django",
    "dotnet",
    "elixir",
    "fullstack",
    "golang",
    "haskell",
    "java",
    "lua",
    "php",
    "pyhton",
    "ruby",
    "rust",
    "scala",
    "software-terms",
    "typescript"
  ],
  "cSpell.language": "en,ru",
  "cSpell.enabledLanguageIds": [
    "javascript",
    "typescript",
    "json",
    "markdown",
    "plaintext",
    "yml"
  ]
}
